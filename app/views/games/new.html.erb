  <h1>New Game</h1>

  <div class="mt-5">
    <% @letters.each do |letter| %>
      <span class="random-letter"><%= letter %></span>
    <% end %>
  </div>

  <form action="/score" method="post" class="mt-5">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="letters" value=<%= @letters.join %>>
    <label for="answer">What is the longest word you can find?</label>
    <input type="text" name="answer" id="answer" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary mt-3">
  </form>
